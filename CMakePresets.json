{
    "version": 3,
    "configurePresets": [
        {
            "name": "windows-msvc",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "windows-clang",
            "hidden": true,
            "inherits": "windows-msvc",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang-cl",
                "CMAKE_CXX_COMPILER": "clang-cl"
            }
        },
        {
            "name": "windows-gcc",
            "hidden": true,
            "inherits": "windows-msvc",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "debug-msvc",
            "displayName": "x64 Debug MSVC",
            "inherits": "windows-msvc",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release-msvc",
            "displayName": "x64 Release MSVC",
            "inherits": "debug-msvc",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "distribution-msvc",
            "displayName": "x64 Distribution MSVC",
            "inherits": "debug-msvc",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "debug-clang",
            "displayName": "x64 Debug Clang",
            "inherits": "windows-clang",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release-clang",
            "displayName": "x64 Release Clang",
            "inherits": "debug-clang",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "distribution-clang",
            "displayName": "x64 Distribution Clang",
            "inherits": "debug-clang",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "debug-gcc",
            "displayName": "x64 Debug GCC",
            "inherits": "windows-gcc",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release-gcc",
            "displayName": "x64 Release GCC",
            "inherits": "debug-gcc",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "distribution-gcc",
            "displayName": "x64 Distribution GCC",
            "inherits": "debug-gcc",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ]
}
